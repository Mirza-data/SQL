select * from fortune_companies
limit 1;

--List all companies in the technology or finance industry that have more than 10,000 employees.
Select 
company_name,
industry
from 
fortune_companies
where industry in ('Technology','Finance','Financials')
and employees > 10000;

--Find companies that do NOT provide healthcare benefits
Select company_name,
		industry 
From fortune_companies
where not healthcare_benefits =1;

--Show each companyâ€™s revenue per employee and label it as revenue_per_employee. (Use calculation with alias)

Select 
	company_name,
    revenue,
    employees,
    Round (revenue/employees,2) as revenue_per_employee
    from fortune_companies;
    
--Categorize companies based on maternity leave weeks using a CASE expression (Excellent / Good / Poor).

SELECT 
    company_name,
    maternity_leave_weeks,
    CASE
        WHEN maternity_leave_weeks >= 16 THEN 'Excellent'
        WHEN maternity_leave_weeks >= 8 THEN 'Good'
        ELSE 'Poor'
    END AS maternity_leave_category
FROM fortune_companies;

--Find the total number of employees in industries that offer healthcare benefits.
SELECT 
    industry,
    SUM(employees) AS total_employees
FROM fortune_companies
WHERE healthcare_benefits = 1
GROUP BY industry;


--Find industries where the average employee tenure is greater than 7 years.
Select
	industry,
    employees,
    avg(avg_employee_tenure) as avg_tenure
from 
	fortune_companies
group by industry
having avg(avg_employee_tenure) > 7;

--Determine which industries have more than 2 companies offering more than 20 days of paid time off.

SELECT 
	company_name,
    industry,
    count(*) as companies_with_high_PTO
from 
	fortune_companies
where
	paid_time_off_days > 20
group by industry
having count(*)>2;

--Show the top 3 industries by total revenue where companies also provide healthcare benefits.
Select
	industry,
    sum(revenue)
from fortune_companies
where healthcare_benefits = 1
order by revenue desc
limit 3;

--Find the average revenue per employee for each industry and only include those with an average greater than $500,000
Select
	industry,
    avg(revenue/employees) as avg_revenue_per_employee
from
	fortune_companies
group by industry
having avg(revenue/employees) > 500;

--Count how many companies in each industry do not provide maternity leave (0 weeks) and show only industries with at least 2 such companies

Select
	industry,
    count(*) as no_maternity_companies
from fortune_companies
where maternity_leave_weeks = 0
group by industry
having  count(*) >=2;

SELECT 
    industry,
    COUNT(*) AS no_maternity_companies,
    CASE
        WHEN COUNT(*) >= 5 THEN 'High Risk'
        WHEN COUNT(*) >= 2 THEN 'Moderate Risk'
        ELSE 'Low Risk'
    END AS risk_category
FROM fortune_companies
WHERE maternity_leave_weeks = 0
GROUP BY industry
HAVING COUNT(*) >= 2;
